<div class="col-sm-4 col-sm-offset-4">
  <div id="updatedbox">
    <h1 class="blue">update your profile</h1>
      <%= form_for @user, :html => {:id => "edit_user"} do |f| %>
          <%= f.label :first_name, "first name", class: "grey" %>:
          <%= f.text_field :first_name, placeholder: "First Name", class:"form-control", required: true %><br>
          <%= f.label :last_name, "last name", class: "grey" %>:
          <%= f.text_field :last_name, placeholder: "Last Name", class:"form-control", required: true %><br>
          <%= f.label :username, "username", class: "grey" %>:
          <%= f.text_field :username, :placeholder => "username", class:"form-control", required: true %><br>
          <%= f.label :avatar, "profile picture", class: "grey" %>
          <%= f.file_field :avatar, class: "grey" %><br>
          <center><a class="blue" role="button" data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">Toggle personal settings ...</a></center>
          <div class="collapse" id="collapseExample">
            <br>
              <%= f.label :location, "Location", class: "grey" %>:
              <%= f.text_field :location, :placeholder => "location", class:"form-control", required: true %><br>
              <%= f.label :weight, "Weight" %>:<br>
              <%= f.select :weight, (100..250).to_a.map { |lbs| [lbs.to_s, lbs] }, {:prompt => 'weight'}, {class:"form-control", required: true} %><br>
              <%= f.label :height, "Height" %>:<br>
              <%= f.select :height, (50..84).to_a.map { |inch| [(inch/12).floor.to_s+'\''+(inch%12).to_s, inch] }, {:prompt => 'height'}, {class:"form-control", required: true} %><br>
              <%= f.label :bfp, "Body Fat Percentage" %>:
              <%= f.select :bfp, (4..40).to_a.map { |bfp| [bfp.to_s + ' %', bfp] }, {:prompt => 'body fat percentage'}, {class:"form-control", required: true} %><br>
              <%= f.label :bmi, "Body Mass Index" %>:
              <%= f.select :bmi, (15..35).to_a.map { |bmi| [bmi.to_s, bmi] }, {:prompt => 'body mass index'}, {class:"form-control", required: true} %><br>
              <%= f.label :email, "Email", class: "grey" %>:
              <%= f.email_field :email, :placeholder => "Email", class:"form-control", required: true %><br>
          </div>

         <hr>
         <%= f.label :password, "Please re-enter your password ...", class: "orange" %>:
         <%= f.password_field :password, :placeholder => "Password", class:"form-control", required: true %><br>
          <%= f.submit "save changes", class:"btn btn-primary", style: "width: 100%;"%><br><br><br><br>
    <% end %>
  </div>
</div>
