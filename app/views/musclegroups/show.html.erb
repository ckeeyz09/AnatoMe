<style>
    body {
    background-color: #101010;
    background-image: none !important;
    }
</style>

<div class="container">  
  <h1 class="blue"><%= @muscle.name =%></h1>
  <h4><%= @muscle.description =%></h4>
  <br><br>

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#workouts" aria-controls="home" role="tab" data-toggle="tab">Workouts</a></li>
    <li role="presentation"><a href="#supps" aria-controls="profile" role="tab" data-toggle="tab">Supplements & Nutrition</a></li>
  </ul>

  <!-- tab contents -->
  <div class="tab-content">
      <div role="tabpanel" class="tab-pane active" id="workouts">
          <% @muscle.workouts.each do |workout| %>
            <div class="row">
              <div class="col-md-6">
                <h3><%= workout.name %></h3>
                <p class="grey"><%= workout.description %></p>
                <% if current_user %>
                  <a class="add-toggle" data-id="<%= workout.id %>">Add this workout to your schedule</a>
                  <div class="add-field add-field<%= workout.id %> animated fadeIn" data-toggle="0" hidden>
                    <select id="status-<%= workout.id %>" name="cars">
                      <option value="1">Sunday</option>
                      <option value="2">Monday</option>
                      <option value="3">Tuesday</option>
                      <option value="4">Wednesday</option>
                      <option value="5">Thursday</option>
                      <option value="6">Friday</option>
                      <option value="7">Saturday</option>
                    </select>
                    <button class="appt-submit" data-id="<%= current_user.id %>" data-workout="<%= workout.id %>">Submit</button>
                  </div>
                <% end %>
              </div>
              
              <div class="col-md-6">
                <iframe class="video" width="560" height="315" src="https://www.youtube.com/embed/<%= workout.video_url %>" frameborder="0" allowfullscreen></iframe>
              </div>
            </div>
            <br>
          <% end %>
      </div>

      <!-- Supplements & Nutrition -->
      <div role="tabpanel" class="tab-pane" id="supps">
        <div class="row">
          <div class="col-md-6">
            <h2 class="blue">Supplements</h2>
            <% @muscle.supplements.each do |supplements| %>
              <h3><%= supplements.name %></h3>
              <p class="grey"><%= supplements.description %></p>
            <% end %>
          </div>
          <div class="col-md-6">
            <h2 class="blue">Nutrition</h2>
            <% @muscle.foods.each do |workout| %>
              <h3><%= workout.name %></h3>
              <p class="grey"><%= workout.description %></p>
            <% end %>
          </div>
        </div>
      </div>

</div>








