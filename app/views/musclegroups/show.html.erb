      <% @muscle.foods.each do |workout| %>
        <h3><%= workout.name %></h3>
        <h4><%= workout.description %></h4>
      <% end %>
    </div>
  </div>

<hr>


  <div class="row">
    <div class="col-sm-6">
      <h3>Supplements</h3>
    </div>
    <div class="col-sm-6">
      <% @muscle.supplements.each do |supplements| %>
        <h3><%= supplements.name %></h3>
        <h4><%= supplements.description %></h4>
      <% end %>
    </div>
  </div>
