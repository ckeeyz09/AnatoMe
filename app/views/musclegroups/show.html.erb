      <div class="col-md-6">
        <h3><%= workout.name %></h3>
        <p class="grey"><%= workout.description %></p>
      </div>

<h1></h1>

      <div class="col-md-6">
        <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= workout.video_url %>" frameborder="0" allowfullscreen></iframe>
      </div>
    </div>
