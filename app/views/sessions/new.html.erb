<div class="login">
	<div class="container">
    <div class="col-md-4 col-md-offset-4">
  		<div class="form">

        <h1 class="white">Login</h1>
  			
        <%= form_for :user, url: login_path, :html => {:id => "new_login"} do |f| %>
          <%= f.label :email, "email", class: "grey" %>:
          <%= f.email_field :email,  placeholder: "Email",class:"form-control", required: true, :autofocus => true %><br />

          <%= f.label :password, "password", class: "grey" %>:
          <%= link_to "(forgot password)", new_password_reset_path %>
          <%= f.password_field :password, placeholder: "Password", class:"form-control", required: true %><br />
        
          <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span>Remember me on this computer</span>
          <% end %>
          <%= f.submit "Login", class:"btn btn-primary", style: "width: 100%;" %>
          <% end %>
        <br>
  		
      </div>
    </div>
	</div>
</div>